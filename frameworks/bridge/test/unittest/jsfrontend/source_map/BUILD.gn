import("//build/test.gni")
import("//foundation/arkui/ace_engine/ace_config.gni")

if (is_ohos_standard_system) {
  module_output_path = "ace_engine/jsframework/source_map"
} else {
  module_output_path = "ace_engine_full/jsframework/source_map"
}

ohos_unittest("SourceMapTest") {
  module_out_path = module_output_path

  sources = [ "source_map_test.cpp" ]

  configs = [
    ":config_source_map_test",
    "$ace_root:ace_test_config",
  ]

  deps = [ "$ace_root/build:ace_ohos_unittest_base" ]

  part_name = ace_engine_part
}

config("config_source_map_test") {
  visibility = [ ":*" ]
  include_dirs = [ "$ace_root" ]
}

group("unittest") {
  testonly = true
  deps = [ ":SourceMapTest" ]
}
